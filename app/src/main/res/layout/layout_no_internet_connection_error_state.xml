<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/material_baseline_grid_2x"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/ic_no_internet_connection" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/retry"
        android:background="@drawable/ic_green_border_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/material_baseline_grid_2x"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/retry"
        android:textColor="@color/theme"
        android:textSize="@dimen/material_typography_regular_button_text_size" />

</androidx.appcompat.widget.LinearLayoutCompat>